SELECT 
  C.CUSTOMER_ID CLIENTE,
  ISNULL(SUM(M.PRICE),0) GASTO
FROM CASE01.MENU M
  JOIN CASE01.SALES S
  ON S.PRODUCT_ID = M.PRODUCT_ID
  RIGHT JOIN CASE01.CUSTOMERS C
  ON C.CUSTOMER_ID = S.CUSTOMER_ID
GROUP BY C.CUSTOMER_ID;


