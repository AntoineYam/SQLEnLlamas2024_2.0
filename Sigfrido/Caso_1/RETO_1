SELECT	
	CLI.CUSTOMER_ID CLIENTE,
	SUM (COALESCE (ME.PRICE,0)) GASTO
FROM [CASE01].[SALES] VE
	JOIN [CASE01].[MENU] ME
	ON VE.PRODUCT_ID=ME.PRODUCT_ID
	RIGHT JOIN [CASE01].[CUSTOMERS] CLI
	ON VE.CUSTOMER_ID=CLI.CUSTOMER_ID
GROUP BY 
	CLI.CUSTOMER_ID;


