SELECT PRODUCT_NAME AS PRODUCTO_MAS_VENDIDO
      ,NUMERO_DE_PEDIDOS AS NUMERO_DE_VECES_QUE_SE_PIDIO
FROM (SELECT M.PRODUCT_NAME
            ,COUNT(S.PRODUCT_ID) AS NUMERO_DE_PEDIDOS
            ,ROW_NUMBER() OVER (ORDER BY COUNT(S.PRODUCT_ID) DESC) AS ROWNUM
        FROM SQL_EN_LLAMAS_ALUMNOS.CASE01.MENU M
	        ,SQL_EN_LLAMAS_ALUMNOS.CASE01.SALES S 
       WHERE M.PRODUCT_ID = S.PRODUCT_ID
    GROUP BY M.PRODUCT_ID, M.PRODUCT_NAME
     ) AS PRODUCTOS
WHERE ROWNUM = 1;

